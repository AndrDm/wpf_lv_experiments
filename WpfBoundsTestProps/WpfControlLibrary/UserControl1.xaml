<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfControlLibrary"
             xmlns:WpfCustomControlLibrary="clr-namespace:WpfCustomControlLibrary;assembly=WpfCustomControlLibrary" x:Name="userControl" x:Class="WpfControlLibrary.UserControl1"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:Height="450" d:Width="800"
	>
	<Grid Width="{Binding ActualWidth, ElementName=userControl, Mode=OneWay}" 
		  Height="{Binding ActualHeight, ElementName=userControl, Mode=OneWay}">

		<WpfCustomControlLibrary:CustomControl1 x:Name="customControl1" 
												HorizontalAlignment="Center" 
												VerticalAlignment="Center" 
												Width="{Binding ActualWidth, ElementName=userControl, Mode=OneWay}"
												Height="{Binding ActualHeight, ElementName=userControl, Mode=OneWay}"
												/>

	</Grid>
</UserControl>
